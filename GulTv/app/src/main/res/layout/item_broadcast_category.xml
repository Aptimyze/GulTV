<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_favorite_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_19_gray" />

        <com.yj.wangjatv.widget.AnyTextView
            android:id="@+id/tv_favorite_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="성인"
            android:textColor="@color/gray_323232"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_favorite_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_btn_trans_bg_selector" />

</RelativeLayout>
